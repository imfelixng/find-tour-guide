<!doctype html>
 <html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Travel Hub</title>
    <meta name="description" content="Ela Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style2.css">

</head>

<body>
   <!-- Left Panel -->
   <aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/admin"><i class="menu-icon fa fa-laptop"></i>Dashboard </a>
                </li>
                <li class="menu-title">Manager</li><!-- /.menu-title -->
                <li class="menu-item">
                    <a href="/admin/manage-user"> <i class="menu-icon fa fa-cogs"></i>Manager User</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/manage-tourguide""> <i class="menu-icon fa fa-cogs"></i>Manager Tour Guide</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/add-location"><i class="menu-icon fa fa-plus"></i>Add Location</a>
                </li>  
                <li class="menu-item">
                    <a href="/admin/manage-location"> <i class="menu-icon fa fa-cogs"></i>Manager Location</a>
                </li>                  
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
</aside>
<!-- /#left-panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Content -->
        <div class="content">
                <!-- Orders -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center">
                            <h2>Manage locations</h2>
                        </div>
            
                        <table class="table table-hover">
                              <thead>
                                <tr>
                                  <th scope="col">#</th>
                                  <th scope="col">Location</th>
                                  <th scope="col">Address</th>
                                  <th scope="col">Picture</th>
                                  <th scope="col">Action</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% for(var i = 0; i < locations.length; i++) { %>
                                <tr>
                                  <th scope="row"><%= i + 1 %></th>
                                  <td><%= locations[i].name %></td>
                                  <td><%= locations[i].address %></td>
                                  <td><img src="http://localhost:3000/<%= locations[i].picture %>" style="width: 300px; height: 200px;"/></td>
                                  <td><a href="/admin/manage-location/delete/<%= locations[i]._id %>" class="btn btn-danger">Delete</a></td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                    </div>
              </div>
                <!-- /.orders -->
        </div>
        <!-- /.content -->
        <div class="clearfix"></div>
    </div>
    <!-- /#right-panel -->
</body>
</html>
